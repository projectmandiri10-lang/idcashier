/* stylelint-disable at-rule-no-unknown */
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    --background: 0 0% 100%;
    --foreground: 222.2 84% 4.9%;
    --card: 0 0% 100%;
    --card-foreground: 222.2 84% 4.9%;
    --popover: 0 0% 100%;
    --popover-foreground: 222.2 84% 4.9%;
    --primary: 221.2 83.2% 53.3%;
    --primary-foreground: 210 40% 98%;
    --secondary: 210 40% 96.1%;
    --secondary-foreground: 222.2 47.4% 11.2%;
    --muted: 210 40% 96.1%;
    --muted-foreground: 215.4 16.3% 46.9%;
    --accent: 210 40% 96.1%;
    --accent-foreground: 222.2 47.4% 11.2%;
    --destructive: 0 84.2% 60.2%;
    --destructive-foreground: 210 40% 98%;
    --border: 214.3 31.8% 91.4%;
    --input: 214.3 31.8% 91.4%;
    --ring: 221.2 83.2% 53.3%;
    --radius: 0.5rem;
  }

  .dark {
    --background: 222.2 84% 4.9%;
    --foreground: 210 40% 98%;
    --card: 222.2 84% 4.9%;
    --card-foreground: 210 40% 98%;
    --popover: 222.2 84% 4.9%;
    --popover-foreground: 210 40% 98%;
    --primary: 217.2 91.2% 59.8%;
    --primary-foreground: 222.2 47.4% 11.2%;
    --secondary: 217.2 32.6% 17.5%;
    --secondary-foreground: 210 40% 98%;
    --muted: 217.2 32.6% 17.5%;
    --muted-foreground: 215 20.2% 65.1%;
    --accent: 217.2 32.6% 17.5%;
    --accent-foreground: 210 40% 98%;
    --destructive: 0 62.8% 30.6%;
    --destructive-foreground: 210 40% 98%;
    --border: 217.2 32.6% 17.5%;
    --input: 217.2 32.6% 17.5%;
    --ring: 224.3 76.3% 48%;
  }
}

@layer base {
  * {
    @apply border-border;
  }

  body {
    @apply bg-background text-foreground;

    font-family: Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
  }
}

@layer utilities {
  /* Smooth transition for sidebar */
  .sidebar-transition {
    transition: transform 0.3s ease-in-out;
  }
}

.gradient-bg {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.dark .gradient-bg {
  background: linear-gradient(135deg, #1e3a8a 0%, #312e81 100%);
}

.glass-effect {
  background: rgb(255 255 255 / 10%);
  backdrop-filter: blur(10px);
  border: 1px solid rgb(255 255 255 / 20%);
}

.dark .glass-effect {
  background: rgb(0 0 0 / 30%);
  border: 1px solid rgb(255 255 255 / 10%);
}

/* Print-specific styles for A4 invoice printing */
@media print {
  /* Hide all elements except those with class printable-invoice-area */
  *:not(.printable-invoice-area, .printable-invoice-area *) {
    display: none !important;
  }

  /* Configure @page rule for A4 size with 1.5cm margins */
  @page {
    size: a4;
    margin: 1.5cm !important;
  }

  /* Ensure the .printable-invoice-area uses full page dimensions */
  .printable-invoice-area {
    position: fixed !important;
    top: 0 !important;
    left: 0 !important;
    width: 100% !important;
    height: 100% !important;
    margin: 0 !important;
    padding: 0 !important;
    box-shadow: none !important;
    border: none !important;

    /* Add z-index to ensure it's on top */
    z-index: 9999 !important;
  }

  /* Remove box shadows and borders from .invoice-container during print */
  .invoice-container {
    box-shadow: none !important;
    border: none !important;
  }

  /* Additional print styles to ensure clean printing */
  body {
    margin: 0 !important;
    padding: 0 !important;
    background: white !important;
    color: black !important;
  }
  
  /* Ensure images are printed */
  img {
    display: block !important;
  }
}
/* stylelint-enable at-rule-no-unknown */